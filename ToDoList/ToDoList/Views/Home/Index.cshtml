@using ToDoList.Models
@model List<ToDo>
@{
    ViewData["Title"] = "Home Page";
}
<a href="/Home/NewToDo/" class="btn btn-primary">New To Do</a>
<hr />
<table>
    <tr>
        <th>ID </th>
        <th>Title </th>
        <th>To Do </th>
        <th>Time </th>
        <th>Delete</th>
        <th>Edit</th>
        <th>Check</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.title</td>
            <td>@x.todo</td>
            <td>@x.time.ToString("dd.MM.yyyy")</td>
            <td><a href="/Home/Edit/@x.id/" class="btn btn-success">Edit </a></td>
            <td><a href="/Home/Delete/@x.id/" class="btn btn-dark">Delete</a></td>
            <td>@x.check</td>
        </tr>

    }
</table>
